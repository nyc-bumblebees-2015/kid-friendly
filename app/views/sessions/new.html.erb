<% provide(:title, "Login") %>
<h2><%= yield(:title) %></h2>
<div class="login">
  <%= form_tag(login_path, method: 'post') do %>
    <div class="form_fields">
      <label>Username</label>
      <%= text_field_tag :username %>
    </div>
    <div class="form_fields">
      <label>Password</label>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag "Login" %>
  <% end %>
</div>
